<!DOCTYPE html>
<html lang="en">

{{> head}}

<body class="sb-nav-fixed">
    {{> qamHeader}}
    <div class="modal-dialog modal-lg" role="document" style="margin-top: 5%; margin-left: 20%">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Add File</h2>
            </div>
            <div class="modal-body">
                <div class="py-1">
                    <form class="form" method="POST" action="/staff/doAddFile">
                        <div class="row">
                            <div class="col">
                                <div class="row">
                                    <div class="col mb-3">
                                        <div class="form-group">
                                            <label>Upload file</label>
                                            <input type="file" name="ideas" required multiple  />
                                            <input type="text" name="path" value= {{path}}>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col d-flex justify-content-end">
                                <button class="btn btn-primary" type="submit">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
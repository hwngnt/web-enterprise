<html lang="en">

{{> head}}

<body class="sb-nav-fixed">
    {{> staffHeader}}
    <div class="container py-5" style="margin-top: 3%; margin-left: 15%">
        <div class="form-group">
            <a href="/staff/addIdea?id={{idCategory}}" class="btn btn-success" style="margin-left: 5%;">
                <span class="glyphicon glyphicon-plus"></span>
                <span><strong>Add new Idea</strong></span>
            </a>
        </div>
    </div>
    <div class="container py-5" style="margin-top: 3%; margin-left: 15%">
        {{#each listFiles}}
        <div class="bg-white border mt-2">
            <form class="form" method="POST" action="/staff/viewEmbeddedFile?id={{value}}">
                <h1>PDF Example</h1>
                <input type="hidden" name="link" value="{{linkValue}}/{{value}}">
                <button class="btn btn-primary" type="submit">{{value}}</button>
            </form>
        </div>
        {{/each}}
    </div>
</body>

</html>
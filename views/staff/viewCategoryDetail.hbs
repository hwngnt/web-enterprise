<html lang="en">

{{> head}}

<body class="sb-nav-fixed">
    {{> staffHeader}}
    <div class="container py-5" style="margin-top: 3%; margin-left: 15%">
        <div class="form-group">
            {{#if compare}}
            <a href="/staff/addIdea?id={{idCategory}}" class="btn btn-success" style="margin-left: 5%;" disabled>
                <span class="glyphicon glyphicon-plus"></span>
                <span><strong>Add new Idea</strong></span>
            </a>
            {{else}}
            <a href="/staff/addIdea?id={{idCategory}}" class="btn btn-success" style="margin-left: 5%;">
                <span class="glyphicon glyphicon-plus"></span>
                <span><strong>Add new Idea</strong></span>
            </a>
            {{/if}}
        </div>
    </div>
    {{#each listFiles}}
    <div class="container py-5" style="margin-left: 15%; width: 500px">
        <ul class="list-group mt-5 text-white">
            <li class="list-group-item d-flex justify-content-between align-content-center">
                <div class="d-flex flex-row"> <img src="https://img.icons8.com/color/100/000000/folder-invoices.png" width="40" />
                    <div class="ml-2">
                        <h1 class="mb-0">{{name}}</h1>
                        <ul>
                            {{#each value}}
                            <li><p><a href="../../{{../this.linkValue}}/{{this}}" >{{this}}</a></p></li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </li>
        </ul>
    </div>
    {{/each}}
</body>


</html>
<html lang="en">

{{> head}}

<body class="sb-nav-fixed">
    {{> staffHeader}}
    <div class="container py-5" style="margin-top: 3%; margin-left: 15%">
        <h1 class="display-1 font-weight-bold" style="text-align:center">Lastest Comments</h1>
        <div class="e-panel card" style="width: 90%; margin-left: 5%">
            <div class="card-body">
                <div class="card-title">
                </div>
                <div class="e-table">
                    <div class="table-responsive table-lg mt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th class="max-width" style="text-align:center">No.</th>
                                    <th class="max-width" style="text-align:center; width: 200px">Comment</th>
                                    <th class="max-width" style="text-align:center">Author</th>
                                    <th style="text-align:center">Time</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each listComments}}
                                <tr>
                                    <td>{{@index}}</td>
                                    <td class="text-nowrap align-middle">{{comment}}</td>
                                    <td class="text-nowrap align-middle">{{author}}</td>
                                    <td class="text-nowrap align-middle">{{time}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
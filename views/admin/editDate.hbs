<!DOCTYPE html>
<html lang="en">

{{> head}}

<body class="sb-nav-fixed">
    {{> qamHeader}}

    <div class="modal-dialog modal-lg" role="document" style="margin-top: 5%; margin-left: 20%">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Editing Category </h2>
            </div>
            <div class="row">
                <div class="col-md-8 border-right">
                    <form class="form" method="POST" action="staff/doEditCategory" id="addTrainee" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col">
                                <input type="hidden" name="id" value="{{aCategory.id}}">
                                <div class="form-group">
                                    <label>Name</label>
                                    <input class="form-control" type="text" name="name" value="{{aCategory.name}}"
                                    disabled required />
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label>Description</label>
                                    <textarea class="form-control" rows="5" name="description" value="{{aCategory.description}}" disabled required/> </textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label>Date of Birth</label>
                                    <input class="form-control" type="date" name="date"
                                        value="{{dateFormat aCategory.dateStart "YYYY-MM-DD"}}" required />
                                </div>
                            </div>
                            <div class="col mb-3">
                                <div class="form-group">
                                    <label>Date of Birth</label>
                                    <input class="form-control" type="date" name="date"
                                        value="{{dateFormat aCategory.dateEnd "YYYY-MM-DD"}}" required />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col d-flex justify-content-end">
                                <button class="btn btn-primary" type="submit">Save</button>
                                <a href="/staff/trainee" class="btn btn-warning">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/check.js"></script>
</body>

</html>
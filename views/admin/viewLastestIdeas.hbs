<html lang="en">

{{> head}}

<body class="sb-nav-fixed">
    {{> adminHeader}}
    <div class="container py-5" style="margin-top: 3%; margin-left: 15%">
        <h1 class="display-1 font-weight-bold" style="text-align:center">Lastest Ideas</h1>
        <div class="e-panel card" style="width: 90%; margin-left: 5%">
            <div class="card-body">
                <div class="card-title">
                </div>
                <div class="e-table">
                    <div class="table-responsive table-lg mt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th class="max-width" style="text-align:center">No.</th>
                                    <th class="max-width" style="text-align:center; width: 200px">Name</th>
                                    <th class="max-width" style="text-align:center">URL</th>
                                    <th class="sortable" style="text-align:center">Like</th>
                                    <th style="text-align:center">Dislike</th>
                                    <th class="sortable" style="text-align:center">Comment</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each listIdeas}}
                                <tr>
                                    <td>{{@index}}</td>
                                    <td class="text-nowrap align-middle">{{name}}</td>
                                    <td class="text-nowrap align-middle">
                                        {{#each value}}
                                            <p><a href="../../{{../this.linkValue}}/{{this}}">{{this}}</a></p>
                                        {{/each}}
                                    </td>
                                    <td class="text-nowrap align-middle">{{n_likes}}</td>
                                    <td class="text-nowrap align-middle">{{n_dislikes}}</td>
                                    <td class="text-nowrap align-middle">{{comment}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>